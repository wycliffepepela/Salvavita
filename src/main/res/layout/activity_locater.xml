<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.wycliffe.salvavita.LocaterActivity">

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="20dp"
        android:background="#e90707">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FIRST AID"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnMyloc"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My location"
        android:textColor="#e90707"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:textSize="25dp"
        android:background="@drawable/background"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btnNearE"
        android:layout_below="@+id/btnMyloc"
        android:layout_width="match_parent"
        android:layout_marginTop="240dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_height="wrap_content"
        android:text="Near Emergence team"
        android:background="@drawable/bckg"
        android:textColor="#e90707"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="167dp"
        app:srcCompat="@drawable/ambulencee" />

</RelativeLayout>
