<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wycliffe.salvavita.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#fff"
    >

   <RelativeLayout
       android:id="@+id/rt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="16dp"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:paddingBottom="10dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="150dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hello. Thanks for using our services to get help in the situation you were in .We are happy to help again  "
               android:textSize="32dp"
               android:textColor="#000"
               android:maxLines="1"
               android:padding="5dp"
               android:ellipsize="marquee"
               android:textStyle="bold"
               android:textAlignment="center"
               android:marqueeRepeatLimit="marquee_forever"
               android:scrollHorizontally="true"
               android:id="@+id/txtMarquee"
               />
       </LinearLayout>
   </RelativeLayout>

    <Button
        android:id="@+id/imgx"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="192dp"
        android:elevation="2dp"
        android:background="@drawable/buttonbg"/>
    <RelativeLayout
        android:layout_below="@+id/rt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:background="@drawable/build"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="160dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp"
                android:text="Please rate our services "
                android:textSize="32dp"
                android:textColor="#000"
                android:maxLines="1"
                android:padding="5dp"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:textAlignment="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:id="@+id/txtMarquee1"
                />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
